@model DeveloperNotes.Models.Revision

@{
    ViewData["Title"] = "Revision #" + Model.RevisionNumber;
}

<div class="header">
    <div class="container">
        <h1 class="">@ViewData["Title"]</h1>
    </div>
</div>

<div class="container">
    <div class="well float-container">
        <div class="float-left">
            <h6>Manage Revision</h6>
        </div>

        <div class="float-right">
            <a asp-controller="Notes" asp-action="Restore" class="btn btn-default">Restore</a>
            <a asp-controller="Notes" asp-action="Revisions" class="btn btn-default">Back to Revisions</a>
        </div>
    </div>

    @Html.DisplayForModel(Model)
</div>
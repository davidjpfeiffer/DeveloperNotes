@model DeveloperNotes.Models.Note

@{
    ViewData["Title"] = Model.Title;
}

<div class="text-right">
    <a asp-action="Edit" class="btn btn-default">Edit</a>
    <a asp-action="Delete" class="btn btn-default">Delete</a>
    <a asp-action="Revisions" class="btn btn-default">View Revisions</a>
    <a asp-action="Index" class="btn btn-default">Back to Notes</a>
</div>
<article class="note">
    <h3>@Html.DisplayFor(model => model.Title)</h3>
    <hr />
    <p>@Html.Raw(Model.Content)</p>
    <p class="meta">Created By @Html.DisplayFor(model => model.Creator.FullName)</p>
    <p class="meta">Published <time>@Html.DisplayFor(model => model.PublishDateUtc)</time></p>
    @if (Model.PublishDateUtc != Model.LastEditedDateUtc)
    {
        <p class="meta">Last Updated <time>@Html.DisplayFor(model => model.LastEditedDateUtc)</time></p>
    }
</article>
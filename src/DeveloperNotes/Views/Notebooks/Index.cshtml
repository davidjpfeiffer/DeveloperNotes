@model IEnumerable<DeveloperNotes.Models.Notebook>

@{
    ViewData["Title"] = "Notebooks";
}

<div class="header float-container">
    <div class="container">
        <div class="float-left">
            <h1 class="container">@ViewData["Title"]</h1>
        </div>
        <div class="float-right">
            <a asp-controller="Notebooks" asp-action="Create" class="btn btn-header">New Notebook</a>
        </div>
    </div>
</div>

<div class="container">
    <div class="well">
        <form asp-controller="Notebooks" asp-action="Search" method="get">
            <div class="input-group">
                <input name="q" type="text" class="form-control" placeholder="Search..." value="@ViewData["Query"]" />
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-default">Search</button>
                </span>
            </div>
        </form>
    </div>
    <div class="list-group">
        @foreach (var item in Model)
        {
            <a asp-controller="Notebooks" asp-action="View" asp-route-notebookId="@item.NotebookId" class="list-group-item">@Html.DisplayFor(modelItem => item.Name)</a>
        }
    </div>
</div>
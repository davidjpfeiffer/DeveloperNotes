@model DeveloperNotes.Models.Notebook

@{
    ViewData["Title"] = Model.Name;
    ViewData["Description"] = Model.Description;
}

<div class="header float-container">
    <div class="container">
        <div class="float-left">
            <h1 class="container">@ViewData["Title"]</h1>
            <p>@ViewData["Description"]</p>
        </div>
        <div class="float-right">
            <a asp-controller="Notebooks" asp-action="ViewNotesToAdd" class="btn btn-header">Add Note</a>
        </div>
    </div>
</div>

<div class="container">
    <div class="manage-content float-container">
        <div class="float-left">
            <h2>Manage Notebook</h2>
        </div>

        <div class="float-right">
            <a asp-controller="Notebooks" asp-action="Edit" class="btn btn-default">Edit</a>
            <a asp-controller="Notebooks" asp-action="Delete" asp-route-notebookId="@Model.NotebookId" class="btn btn-default">Delete</a>
        </div>
    </div>

    @Html.DisplayForModel(Model)

    <div class="list-group">
        @foreach (var item in Model.Notes)
        {
            <a asp-controller="Notes" asp-action="View" asp-route-noteId="@item.NoteId" class="list-group-item">@Html.DisplayFor(modelItem => item.Title)</a>
        }
    </div>
</div>

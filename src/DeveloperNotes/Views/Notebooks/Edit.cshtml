@model DeveloperNotes.Models.Notebook

@{
    ViewData["Title"] = "Edit";
}

<div class="header">
    <div class="container">
        <h1 class="">@ViewData["Title"]</h1>
    </div>
</div>

<div class="container">
    <form asp-controller="Notebooks" asp-action="Edit">
        <div class="form-horizontal">
            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NotebookId" />
            <div class="form-group">
                <input asp-for="Name" class="form-control input-lg" placeholder="Notebook Name" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="form-group">
                <textarea asp-for="Description" class="form-control input-lg" placeholder="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger" />
            </div>
            <div class="form-group">
                <div class="text-right">
                    <input type="submit" value="Save Changes" class="btn btn-primary" />
                    <a asp-action="View" asp-route-notebookId="@Model.NotebookId" class="btn btn-default">Back to Notebook</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

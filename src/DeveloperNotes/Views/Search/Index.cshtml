@model IEnumerable<DeveloperNotes.Models.Note>
@{
    ViewData["Title"] = "Search";
}

<div class="header">
    <div class="container body-content">
        <h1 class="">@ViewData["Title"]</h1>
    </div>
</div>

<div class="container body-content">
    <div class="well">
        <form asp-controller="Search" asp-action="Index" method="get">
            <div class="input-group">
                <input name="q" type="text" class="form-control" placeholder="Search..." value="@ViewData["Query"]" />
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-default">Search</button>
                </span>
            </div>
        </form>
    </div>
    @if (Model.Count() > 0)
    {
        <div class="list-group">
            @foreach (var item in Model)
                {
                <a asp-controller="Notes" asp-action="View" asp-route-noteId="@item.NoteId" class="list-group-item">@Html.DisplayFor(modelItem => item.Title)</a>
            }
        </div>
    }
    else
    {
        <p>No notes found for this query.</p>

    }
</div>
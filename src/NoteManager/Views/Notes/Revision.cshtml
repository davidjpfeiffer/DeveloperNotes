@model NoteManager.Models.Revision

@{
    ViewData["Title"] = "Revision #" + Model.RevisionNumber;
}

<div class="header">
    <div class="container">
        <h1 class="">@ViewData["Title"]</h1>
    </div>
</div>

<div class="container">
    <div class="manage-content float-container">
        <div class="float-left">
            <h2>Manage Revision</h2>
        </div>

        <div class="float-right">
            <a asp-controller="Notes" asp-action="Restore" class="btn btn-default">Restore</a>
            <a asp-controller="Notes" asp-action="Revisions" class="btn btn-default">Back to Revisions</a>
        </div>
    </div>

    @Html.DisplayForModel(Model)
</div>

@section Scripts {
    <link href="~/lib/ckeditor/plugins/codesnippet/lib/highlight/styles/default.css" rel="stylesheet" />
    <script src="~/lib/ckeditor/plugins/codesnippet/lib/highlight/highlight.pack.js"></script>
    <script src="~/lib/ckeditor/initTarget.js"></script>
}